<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Sign Up Page</title>
<style>
    body {
      font-family: Arial, sans-serif;
      background: rgb(255,0,18);
      background: linear-gradient(0deg, rgba(255,0,18,1) 10%, rgba(253,187,45,1) 100%);
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .signup-container {
      background-color: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      width: 300px;
    }

    .signup-container h2 {
      text-align: center;
    }

    .form-group {
      margin-bottom: 15px;
    }

    .form-group label {
      display: block;
      font-size: 14px;
      margin-bottom: 5px;
    }

    .form-group input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;

    }

    .form-group button {
      background-color: brown;
      color: #fff;
      padding: 10px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      width: 100%;
      font-size: 16px;
    }

    .login-link {
      text-align: center;
      margin-top: 10px;
    }

    .login-link a {
      color: #3498db;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="signup-container">
    <h2>Sign Up</h2>
    <form action="/signup" method="post" onsubmit="return checkpass()">
      <div class="form-group">
        <label for="username" >Username:</label>
        <input type="text" id="username" name="username" required><br><br>

        <label for="email">Email:</label>
        <input type="text" id="email" name="email" required>
      </div>
      
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" id="password" onblur="validatePass()" name="password" required><br><br>
        <span style="color: red;" id="fff"></span>
    
        

        <label for="confirm password">Confirm Password:</label>
        <input type="password" id="confirm-password" onblur="checkpass()" name="confirm password" required><br><br>
        <span style="color: red;" id="hhh"></span>
       
        
    
        
      </div>
      <span id="tag"></span>
      <div class="form-group">
        <button type="submit">Sign Up</button>
        <p><%=message%></p>
        <p>Already have an account? <a href="/login">Login here</a></p>
      </div>
    </form>
    <div class="login-link">
    </div>
  </div>


<script>
    
    function validatePass(){
        const pass=document.getElementById('password').value
        const Regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        if(Regex.test(pass)){
            document.getElementById("fff").innerText=""
        }else{
            document.getElementById("fff").innerText="Password is invalid "
            return false
        }

    }

    function checkpass(){
        const pass=document.getElementById('password').value
        const d=document.getElementById('confirm-password').value
       if( pass == d ){
        document.getElementById("hhh").innerText=""
       }else{
        document.getElementById("hhh").innerText="Password doesn't match "
       }
    }
    

</script>
</body>
</html>
